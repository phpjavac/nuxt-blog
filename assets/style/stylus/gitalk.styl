/* customize style */
.gt-container
  // common
  a
    color #e8676b !important
    &:hover
      color var(--v-accent-lighten1) !important
      border-color var(--v-accent-lighten1) !important

  // icons
  .gt-svg
    svg
      fill #e8676b !important

  // loader
  .gt-spinner
    &::before
      border-top-color #e8676b !important

  // button
  .gt-btn
    border 1px solid #e8676b !important
    &-preview
      color #e8676b !important
      &:hover
        border-color var(--v-accent-lighten1) !important
    &-public, &-login
      background-color #e8676b !important
      &:hover
        background-color var(--v-accent-lighten1) !important
        border-color var(--v-accent-lighten1) !important

  // link
  .gt-link
    border-bottom none
    &:hover
      border-bottom 1px solid #e8676b !important

  // meta
  .gt-meta
    z-index 1 !important

  // user
  .gt-user
    .is--poping
      .gt-ico
        svg
          fill #e8676b !important

  // popup
  .gt-popup
    margin-top .3rem !important
    .gt-action
      &.is--active
        &::before
          top 0.6rem !important
          background #e8676b !important

  // header
  .gt-header
    &-textarea:focus
      box-shadow inset 0 1px 2px rgba(27,31,35,.075), 0 0 0 0.2em rgba(232,103,107,.3) !important
    &-controls
      &-tip
        color #e8676b !important

  // avatar
  .gt-avatar
    width 44px !important
    height 44px !important

  // comment
  .gt-comment
    &-username
      color #e8676b !important
    &-content
      &:hover
        border-radius 2px
        box-shadow inset 0 1px 2px rgba(27,31,35,.075), 0 0 0 0.1em rgba(232,103,107,.3) !important
      span
        display inline-block !important
    &-like, &-edit, &-reply
      +screen-width-less-than(sm)
        top auto !important
        bottom 0 !important
